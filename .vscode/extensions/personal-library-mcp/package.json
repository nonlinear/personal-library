{
  "name": "personal-library-mcp",
  "displayName": "Personal Library MCP",
  "description": "Search your personal book library via MCP in VS Code",
  "version": "0.2.0",
  "publisher": "nonlinear",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Personal Library",
      "properties": {
        "personalLibrary.booksPath": {
          "type": "string",
          "default": "books",
          "description": "Path to books directory (relative to workspace or absolute)"
        },
        "personalLibrary.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Python interpreter path (e.g., /opt/homebrew/bin/python3.11 or python3)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.3.0"
  }
}
