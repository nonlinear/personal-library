{
  "name": "personal-library-mcp",
  "displayName": "Personal Library MCP",
  "description": "Search your personal book library via MCP in VS Code",
  "version": "0.1.0",
  "publisher": "nonlinear",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [
    "onLanguageModelTool:query_library",
